<Window x:Class="Chinook.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chinook.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Border> <Grid>
      
  
    <Label 
           Background="GreenYellow"
              
           >
        <Button Content="Press" Height="31" Width="68" RenderTransformOrigin="1.096,0.669" Click="Button_Click"
                />

      </Label>
      <Label Content="Artist Name :"
             Height="50"
        Margin="100,00,0,0"
        />
      <Label Content="Artist Id :"
        Height="50"
   Margin="100,50,0,0"
   />
      <Label Content="{Binding ArtistId,Mode=OneWay}"
                  Height="50"
Margin="180,50,0,0"/>

      <Label Content="{Binding  Name,Mode=OneWay}"
             Height="50"
Margin="180,0,0,0"
             />
    </Grid>
  </Border>

</Window>
