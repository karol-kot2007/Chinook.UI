<UserControl x:Class="Chinook.UI.AlbumInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chinook.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical" >
      <StackPanel Orientation="Horizontal">
      <Label Content="Album:"/>
      <TextBox Text="{Binding AlbumName,Mode=OneWay}"   IsReadOnly="True" />
      </StackPanel>
    <StackPanel Orientation="Horizontal">
      <Label Content="Artist:" />
      <TextBox Text="{Binding ArtistName,Mode=OneWay}" IsReadOnly="True"/>
    </StackPanel>
    <DataGrid Name="GridAlbum" AutoGenerateColumns="False" Width="605" Margin="0,0,0,0" >
        <DataGrid.Columns>

        <DataGridTextColumn Header="Composer:" Binding="{Binding Composer}" IsReadOnly="True"   />
        <DataGridTextColumn Header="TrackName: " Binding="{Binding Name}" IsReadOnly="True"  />
        <DataGridTextColumn Header="Price: " Binding="{Binding UnitPrice}" IsReadOnly="True"  />
      
        </DataGrid.Columns>
      </DataGrid>
   
  </StackPanel>

</UserControl>
