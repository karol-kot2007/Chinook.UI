<UserControl x:Class="Chinook.UI.AlbumInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chinook.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <StackPanel Orientation="Vertical">
    <StackPanel Orientation="Horizontal" >

    

    </StackPanel>

    <StackPanel Orientation="Horizontal" Height="155" >
      <!--<Label Content="Artist Id :"  Height="50" Margin="100,50,0,0"  />
      <TextBox Text="{Binding ArtistId,Mode=OneWay}"  Height="50" Margin="180,50,0,0"/>-->
      <DataGrid Name="GridAlbum" AutoGenerateColumns="True" Width="200" Margin="12,21,0,0">
        <DataGrid.Columns>
          <DataGridTextColumn Header="ArtistId"  Binding="{Binding ArtistId}"/>
          <DataGridTextColumn Header="ArtistName" Binding="{Binding ArtistName}" />
        </DataGrid.Columns>
      </DataGrid>
    </StackPanel>

    <!--<DataGrid DataContext="{Binding DataContext}"/>-->

  </StackPanel>
</UserControl>
