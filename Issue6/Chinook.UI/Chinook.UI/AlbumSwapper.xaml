<UserControl x:Class="Chinook.UI.AlbumSwapper"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chinook.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <StackPanel >
    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
      <Button Content="Prev" Margin="0,0,0,0" Click="Button_Prev" Width="80" Height="25" RenderTransformOrigin="01.08,0.6" />
      <TextBox  x:Name="Content" Margin="10,0,0,0" Width="400" Height="20" IsReadOnly="True" RenderTransformOrigin="-0.19,0.373"  />
      <Button Content="Next" Click="Button_Next" RenderTransformOrigin="-0.3,0.888" Width="80" Height="25" Margin="10,0,0,0"/>
    </StackPanel>
  </StackPanel>
</UserControl> 
